# MongoDB Configuration
MONGODB_URL=mongodb://localhost:27017
DATABASE_NAME=forest_fire_system

# JWT Configuration
SECRET_KEY=your-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Serial Port Configuration
SERIAL_PORT=/dev/ttyUSB0
BAUD_RATE=115200

# Groq AI Configuration (for Agentic AI) - Optional but Recommended
# Get your FREE API key from https://console.groq.com/keys
# Groq provides extremely fast inference with powerful open-source models
GROQ_API_KEY=
GROQ_MODEL=llama-3.1-70b-versatile

# AI Analysis Interval (seconds)
# How often to run AI risk analysis (30-60 seconds recommended to save API costs)
# Sensor data is still stored and streamed every reading, but AI only runs periodically
AI_ANALYSIS_INTERVAL=30

# External Data Integration
# OpenWeatherMap API (for real weather data) - Free tier available at https://openweathermap.org/api
OPENWEATHER_API_KEY=

# Default Forest Monitoring Location (Bangalore/Karnataka region example)
# Change these to your actual forest location coordinates
FOREST_LATITUDE=12.9716
FOREST_LONGITUDE=77.5946
FOREST_LOCATION_NAME=Bannerghatta Forest, Bangalore

# ===========================
# SMS Notifications (Twilio)
# ===========================
# Get these from: https://console.twilio.com/
# Free trial: $15 credit (~500 SMS messages)
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=

# SMS Recipients (comma-separated, with country codes)
# Format: +[country_code][number]
# Examples: +919876543210,+911234567890,+14155552671
# For trial accounts, verify numbers at: https://console.twilio.com/us1/develop/phone-numbers/manage/verified
SMS_RECIPIENTS=

# Send SMS when fire risk reaches this threshold (%)
SMS_RISK_THRESHOLD=75.0

# ===========================
# Email Notifications
# ===========================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=

# Email Recipients (comma-separated)
EMAIL_RECIPIENTS=

# System Configuration
FIRE_RISK_THRESHOLD=70
HIGH_SMOKE_THRESHOLD=100
HIGH_TEMP_THRESHOLD=35
LOW_HUMIDITY_THRESHOLD=30

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:3000
